<h2>Log in</h2>
<%= form_tag('/session/create') do %>
<div class= "field">
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email] %>
</div>
<div class= "password">
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</div>
<div class = "actions">
  <%= submit_tag "Log in" %>
</div>
<% end %>
<br />
