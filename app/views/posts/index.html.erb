<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<table border=1>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Date</th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.user_id %></td>
    <td><%= post.created_at %></td>
  </tr>
  <% end %>
</table>